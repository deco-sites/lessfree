{
  "imports": {
    "deco-sites/lessfree/": "./",
    "serve": "https://deno.land/std@0.170.0/http/server.ts"
  },
  "tasks": {
    "start": "deno run -A --unstable main.ts",
    "gen": "deno run -A dev.ts --gen-only",
    "play": "USE_LOCAL_STORAGE_ONLY=true deno task start",
    "component": "deno eval 'import \"deco/scripts/component.ts\"'",
    "release": "deno eval 'import \"deco/scripts/release.ts\"'",
    "update": "deno run -Ar https://deco.cx/update",
    "check": "deno fmt && deno lint && deno check dev.ts main.ts",
    "install": "deno eval 'import \"deco/scripts/apps/install.ts\"'",
    "uninstall": "deno eval 'import \"deco/scripts/apps/uninstall.ts\"'",
    "bundle": "deno eval 'import \"deco/scripts/apps/bundle.ts\"' deco-sites/lessfree",
    "cache_clean": "rm deno.lock; deno cache -r main.ts",
    "build": "deno run -A dev.ts build",
    "preview": "deno run -A main.ts"
  },
  "githooks": {
    "pre-commit": "check"
  },
  "exclude": [
    "node_modules",
    "static/",
    "README.md"
  ],
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "nodeModulesDir": true,
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
